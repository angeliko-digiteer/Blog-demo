<div id="<%= dom_id post %>">
  <h3>
    <%= post.title %>
  </h3>
  <h4>
    Posted by <%= link_to post.user.name, user_path(post.user) %>
  </h4>
  <h6>
    <%= pluralize(post.views, "view") %>
    <%= "#{pluralize(post.comments.size, 'comment')}." %>
  </h6>
  <div>
    <%= post.body %>
  </div>
</div>
